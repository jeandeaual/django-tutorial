{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run server",
            "type": "shell",
            "command": "python manage.py runserver",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Migrate",
            "type": "shell",
            "command": "python manage.py migrate",
            "group": "build"
        },
        {
            "label": "Django shell",
            "type": "shell",
            "command": "python manage.py shell",
            "group": "build"
        },
        {
            "label": "Create an admin",
            "type": "shell",
            "command": "python manage.py createsuperuser",
            "group": "build"
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "python manage.py test",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
    ]
}
